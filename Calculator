#CALCULATOR
print("WELCOME TO CALCULATOR")
while True:
    try  :
        def answer(equal):
            print("Equal:", equal)
        def putnum():
            number = float(input("Put a Number:"))
            return number
        while True:
            choice = int(input("You could a choice \n1-Collection\n2-Extraction\n3-Impact\n4-Chamber\n5-Factorial\n6-Equation Root\n7-Exit\nChoice:"))
            if choice == 1:
                first = putnum()
                second = putnum()
                equal = first + second
                answer(equal)
                continue
            elif choice == 2:
                first = putnum()
                second = putnum()
                equal = first - second
                answer(equal)
                continue
            elif choice == 3:
                first = putnum()
                second = putnum()
                equal = first * second
                answer(equal)
                continue
            elif choice == 4:
                first = putnum()
                second = putnum()
                equal = first / second
                answer(equal)
                continue
            elif choice == 5:
                x = int(input("Put a number:"))
                if x<0:
                    print("Can't do factorial with negative number")
                elif x == 0:
                    print("0 Factorial Equal 1")
                else :
                    equal = 1
                    for i in range(1,x+1):
                        equal *= i
                    answer(equal)
                continue
            elif choice == 6:
                a = putnum()
                b = putnum()
                c = putnum()
                delta = b*b-4*a*c
                if delta <0 :
                    print("You don't have any root")
                elif delta == 0:
                    x1 = (-b-delta**0.5)/(2*a)
                    print("You have a root\nRoot:",x1)
                else:
                    x1 = (-b - delta ** 0.5) / (2 * a)
                    x2 = (-b + delta ** 0.5) / (2 * a)
                    print("You have 2 root\nFirst Root:{}\nSecond Root:{}".format(x1,x2))
            elif choice == 7:
                break
            else:
                print("This Number Is Out of Range\nTry Again...")
    except ValueError :
        print("You did something wrong Let's try again")
    if choice ==7:
        break
print("See You Again\nHave a Nice Day")
print("Mervan Erdem")
